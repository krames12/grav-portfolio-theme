<div class="recent-blog-posts">
  <h3>Recent Blog Posts</h3>
  <ul>
    {% for post in page.find('/blog').children.order('date', 'desc').slice(0, 5) %}
        <li class="recent-posts">
            <strong><a href="{{ post.url }}">{{ post.title }}</a></strong>
        </li>
    {% endfor %}
  </ul>
</div>